{
  "theme": "Ayu Dark",
  "edit_predictions": {
    "mode": "subtle",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null
    },
    "enabled_in_text_threads": false
  },
  "agent": {
    "profiles": {
      "tooling": {
        "name": "tooling",
        "tools": {
          "web_search": true
        },
        "enable_all_context_servers": false,
        "context_servers": {}
      }
    },
    "default_profile": "write",
    "always_allow_tool_actions": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "telemetry": {
    "metrics": true
  },
  "vim_mode": true,
  "ui_font_size": 18.0,
  "buffer_font_size": 16.0,
  "language_models": {
    "ollama": {
      "api_url": "http://192.168.4.227:11434",
      "available_models": [
        {
          "name": "qwen3-coder:30b",
          "display_name": "qwen",
          "max_tokens": 32768,
          "supports_tools": true,
          "supports_thinking": true,
          "supports_images": true
        }
      ]
    }
  }
}
